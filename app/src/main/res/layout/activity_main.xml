<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    /* TextView da expressao a ser calculada */

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"
        />

    /* TextView do resultado */

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="36sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    /* Layouts lineares separando cada fila de botoes */
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clear"
            style="@style/Operators_Button"
            android:layout_weight="3"
            android:text="C"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_div"
            style="@style/Operators_Button"
            android:text="/"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_7"
            style="@style/Numbers_Button"
            android:text="7"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_8"
            style="@style/Numbers_Button"
            android:text="8"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_9"
            style="@style/Numbers_Button"
            android:text="9"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multi"
            style="@style/Operators_Button"
            android:text="X"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_4"
            style="@style/Numbers_Button"
            android:text="4"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_5"
            style="@style/Numbers_Button"
            android:text="5"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            style="@style/Numbers_Button"
            android:text="6"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_min"
            style="@style/Operators_Button"
            android:text="-"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_1"
            style="@style/Numbers_Button"
            android:text="1"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_2"
            style="@style/Numbers_Button"
            android:text="2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_3"
            style="@style/Numbers_Button"
            android:text="3"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sum"
            style="@style/Operators_Button"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_point"
            style="@style/Numbers_Button"
            android:text="."
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_0"
            style="@style/Numbers_Button"
            android:text="0"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_backspace"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_equal"
            style="@style/Operators_Button"
            android:text="="
            />
    </LinearLayout>

</LinearLayout>